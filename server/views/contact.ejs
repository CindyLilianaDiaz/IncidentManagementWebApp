<% include partials/header.ejs %>
    <% include partials/navbar.ejs %>
        <main class="main">
            <% if (messages) { %>
                <div class="alert alert-success alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <%= messages %></div>
            <% } %>
            <div class="container white-bg"> <!-- Wrape around the form -->
                <div class="wrapper">
                    <form method="post" class="form-contact">
                        <div class="row text-center bol"><i class="fa fa-circle"></i></div>
                        <h3 class="form-signin-heading text-center">
                            <img src="../Assets/bug.png" alt="Manage Support Logo" width="100px"/>
                        </h3>
                        <hr>
                        <h3 class="form-signin-heading text-center">Contact Us</h3><br>
                        <p class="red-required">Every field is required *</p>
                        <div class="form-group input-group">
                            <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-smile-o"></i></span>
                            <input type="text" class="form-control" id="name" placeholder="Full Name" required>
                        </div>
                        <div class="form-group input-group">
                            <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-envelope-o"></i></span>
                            <input type="email" class="form-control" id="email" name="email" placeholder="your@email.com" required>
                        </div>
                        <div class="form-group input-group">
                            <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-phone"></i></span>
                            <input type="tel" class="form-control" id="phone" name="phone" placeholder="Contact Number" required>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" id="message" name="message" rows="5" placeholder="Please Enter Your Message Here." required></textarea>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-submit"><i class="fa fa-paper-plane-o"></i> Send</button>
                            <button type="reset" class="btn btn-reset"><i class="fa fa-eraser"></i> Reset</button>
                        </div>  
                    </form>
                </div> <!-- .wrapper -->
            </div> <!-- .container -->
        </main>
        <% include partials/footer.ejs %>