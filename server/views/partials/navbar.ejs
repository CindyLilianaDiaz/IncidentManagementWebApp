    File Description: navbar across the website. 
                      Different items will be shown depending on their authentication type.
-->
<nav class="navbar navbar-transparent">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><img src="/Assets/logo-navbar-new.png"></a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">    
      <ul class="nav navbar-nav navbar-right">
        <!-- If they are login as Admin -->
        <% if(displayName && type === "Admin"){ %>
            <% if(title === "Users" || title === "User Details" || title === "Add a New User"){%>
                <li class="active"><a href="/users">Users</a></li>
                <li><a href="/tickets">Dashboard</a></li>
                <li><a href="/contact">Contact Us</a></li>
                <li class="navbar-text"><i class="fa fa-user"></i> Wecome, <%= displayName %></li>
                <li><a href="/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
            <% } else if(title === "Dashboard" || title === "Ticket Details" || title === "Closed Tickets"){%>
                <li><a href="/users">Users</a></li>
                <li class="active"><a href="/tickets">Dashboard</a></li>
                <li><a href="/contact">Contact Us</a></li>
                <li class="navbar-text"><i class="fa fa-user"></i> Wecome, <%= displayName %></li>
                <li><a href="/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
            <% }else if(title === "Contact"){ %>
                <li><a href="/users">Users</a></li>
                <li><a href="/tickets">Dashboard</a></li>
                <li class="active"><a href="/contact">Contact Us</a></li>
                <li class="navbar-text"><i class="fa fa-user"></i> Wecome, <%= displayName %></li>
                <li><a href="/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
            <% } %>
        <!-- If they are login as Customer-->        
        <% } else if(displayName && type === "Customer"){ %>
            <% if(title === "My Tickets" || title === "Create New Ticket" || title==="Ticket Details"){ %>
                <li class="active"><a href="/tickets/mytickets">My Tickets</a></li>
                <li><a href="/users/myaccount">Edit Account</a></li>
                <li><a href="/contact">Contact Us</a></li>
                <li class="navbar-text"><i class="fa fa-user"></i> Wecome, <%= displayName %></li>
                <li><a href="/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
            <% } else if(title === "My Account"){ %>
                <li><a href="/tickets/mytickets">My Tickets</a></li>
                <li class="active"><a href="/users/myaccount">Edit Account</a></li>
                <li><a href="/contact">Contact Us</a></li>
                <li class="navbar-text"><i class="fa fa-user"></i> Wecome, <%= displayName %></li>
                <li><a href="/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
            <% }else if(title === "Contact"){ %>
                <li><a href="/tickets/mytickets">My Tickets</a></li>
                <li><a href="/users/myaccount">Edit Account</a></li>
                <li class="active"><a href="/contact">Contact Us</a></li>
                <li class="navbar-text"><i class="fa fa-user"></i> Wecome, <%= displayName %></li>
                <li><a href="/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
            <% } %>
         <!-- not authenticated -->    
         <% } else{ %>
            <% if(title === "Register"){ %>
                <li class="active"><a href="/register">Register</a></li> 
                <li><a href="/contact">Contact Us</a></li>
                <li><a href="/login"><i class="fa fa-sign-in"></i> Login</a></li>
            <% } else if(title === "Contact"){ %>
                <li><a href="/register">Register</a></li> 
                <li class="active"><a href="/contact">Contact Us</a></li>
                <li><a href="/login"><i class="fa fa-sign-in"></i> Login</a></li>  
            <% } else{ %>
                <li><a href="/register">Register</a></li> 
                <li><a href="/contact">Contact Us</a></li>
                <li class="active"><a href="/login"><i class="fa fa-sign-in"></i> Login</a></li> 
            <% } %>
         <% } %> 
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>